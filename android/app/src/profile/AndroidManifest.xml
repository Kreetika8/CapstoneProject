<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.yourappname">

    <!-- Required permission for accessing the internet (for development) -->
    <uses-permission android:name="android.permission.INTERNET"/>

    <!-- Permission to read external storage (access gallery) -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <!-- Optional: Permission to write to external storage (if saving images) -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:label="your_app_label"
        android:icon="@mipmap/ic_launcher">
        <!-- Your application components -->
    </application>
</manifest>

